@model IEnumerable<FishyBuisness_3.Models.Fish>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @*Html.ActionLink("First Name", "Index", new { Sorting_Order = ViewBag.SortingName })*@
                @* @Html.DisplayNameFor(model => model.FishName)*@    
                <a asp-action="Index" asp-route-Sorting_Order="@ViewBag.SortingName">
                    @localizer["FirstName"]
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FishDescription)
            </th>
